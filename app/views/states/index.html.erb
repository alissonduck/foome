<div class="max-w-7xl mx-auto px-4">
  <div class="mb-8">
    <h1 class="text-2xl font-bold text-foome-dark mb-4">Estados</h1>
    <p class="text-foome-gray-dark mb-6">Lista de estados do Brasil.</p>
  </div>

  <div class="bg-white shadow-sm rounded-lg overflow-hidden">
    <div class="divide-y divide-gray-200">
      <% @states.each do |state| %>
        <div class="p-4 hover:bg-gray-50">
          <%= link_to state_path(state), class: "flex items-center justify-between" do %>
            <div>
              <h3 class="text-lg font-medium text-foome-dark"><%= state.name %></h3>
              <p class="text-sm text-foome-gray"><%= pluralize(state.cities.count, 'cidade', 'cidades') %></p>
            </div>
            <div class="flex items-center">
              <span class="bg-gray-100 text-gray-800 px-2 py-1 rounded-md font-medium text-sm"><%= state.abbreviation %></span>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-3 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
