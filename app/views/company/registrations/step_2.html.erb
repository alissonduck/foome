<% content_for :wizard_steps do %>
  <%= render partial: 'wizard_steps', locals: { current_step: 2 } %>
<% end %>

<h1 class="text-2xl font-bold text-center mb-2">Dados do administrador</h1>
<p class="text-gray-600 text-center mb-6">Informe seus dados para criar uma conta de administrador</p>

<%= form_with url: company_registrations_step_2_path, method: :patch, class: "space-y-4" do |form| %>
  <div>
    <%= form.label :employee_name, "Nome completo", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.text_field "employee[name]", placeholder: "Digite seu nome completo", class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-[#ff4b4b] focus:border-[#ff4b4b]" %>
  </div>
  
  <div>
    <%= form.label :employee_phone, "WhatsApp", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.telephone_field "employee[phone]", placeholder: "(00) 00000-0000", class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-[#ff4b4b] focus:border-[#ff4b4b]", data: { mask: "phone" } %>
  </div>
  
  <div>
    <%= form.label :employee_password, "Senha", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.password_field "employee[password]", placeholder: "Digite sua senha", class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-[#ff4b4b] focus:border-[#ff4b4b]" %>
    <p class="mt-1 text-xs text-gray-500">Use pelo menos 8 caracteres, incluindo letras e n√∫meros</p>
  </div>
  
  <div>
    <%= form.label :employee_password_confirmation, "Confirmar senha", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.password_field "employee[password_confirmation]", placeholder: "Confirme sua senha", class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-[#ff4b4b] focus:border-[#ff4b4b]" %>
  </div>
  
  <div class="pt-4 flex space-x-4">
    <%= link_to "Voltar", company_register_path, class: "flex-1 flex justify-center items-center px-4 py-2 border border-gray-300 rounded-md text-gray-700 bg-white hover:bg-gray-50 transition duration-200" %>
    
    <%= form.submit "Continuar", class: "flex-1 bg-[#ff4b4b] text-white py-2 px-4 rounded hover:bg-[#ff4b4b]/90 transition duration-200" %>
  </div>
<% end %>
