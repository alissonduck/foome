<h2 class="text-2xl font-bold text-center text-gray-900 mb-6">Login para empresas</h2>

<%= form_for :employee, url: company_login_path, method: :post, html: { class: "space-y-6" } do |f| %>
  <div>
    <%= f.label :email, "Email", class: "block text-sm font-medium text-gray-700" %>
    <div class="mt-1">
      <%= f.email_field :email, autofocus: true, required: true, placeholder: "seu@email.com", 
          class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-[#ff4b4b] focus:border-[#ff4b4b] sm:text-sm" %>
    </div>
  </div>

  <div>
    <%= f.label :password, "Senha", class: "block text-sm font-medium text-gray-700" %>
    <div class="mt-1">
      <%= f.password_field :password, required: true, placeholder: "••••••••", 
          class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-[#ff4b4b] focus:border-[#ff4b4b] sm:text-sm" %>
    </div>
  </div>

  <div class="flex items-center justify-between">
    <div class="flex items-center">
      <%= f.check_box :remember_me, class: "h-4 w-4 text-[#ff4b4b] focus:ring-[#ff4b4b] border-gray-300 rounded" %>
      <%= f.label :remember_me, "Lembrar de mim", class: "ml-2 block text-sm text-gray-900" %>
    </div>

    <div class="text-sm">
      <%= link_to "Esqueceu sua senha?", "#", class: "font-medium text-[#ff4b4b] hover:text-[#ff4b4b]/80" %>
    </div>
  </div>

  <div>
    <%= f.submit "Entrar", class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-[#ff4b4b] hover:bg-[#ff4b4b]/90 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[#ff4b4b]" %>
  </div>
<% end %>

