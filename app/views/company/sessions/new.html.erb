<h2 class="text-2xl font-bold text-center text-gray-900 mb-6">Login para empresas</h2>

<%= form_for :employee, url: company_login_path, method: :post, html: { class: "space-y-6" } do |f| %>
  <div>
    <%= f.label :email, "Email", class: "block text-sm font-medium text-gray-700" %>
    <div class="mt-1">
      <%= f.email_field :email, autofocus: true, required: true, placeholder: "seu@email.com", 
          class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-[#ff4b4b] focus:border-[#ff4b4b] sm:text-sm" %>
    </div>
  </div>

  <div>
    <%= f.label :password, "Senha", class: "block text-sm font-medium text-gray-700" %>
    <div class="mt-1">
      <%= f.password_field :password, required: true, placeholder: "••••••••", 
          class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-[#ff4b4b] focus:border-[#ff4b4b] sm:text-sm" %>
    </div>
  </div>

  <div class="flex items-center justify-between">
    <div class="flex items-center">
      <%= f.check_box :remember_me, class: "h-4 w-4 text-[#ff4b4b] focus:ring-[#ff4b4b] border-gray-300 rounded" %>
      <%= f.label :remember_me, "Lembrar de mim", class: "ml-2 block text-sm text-gray-900" %>
    </div>

    <div class="text-sm">
      <%= link_to "Esqueceu sua senha?", "#", class: "font-medium text-[#ff4b4b] hover:text-[#ff4b4b]/80" %>
    </div>
  </div>

  <div>
    <%= f.submit "Entrar", class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-[#ff4b4b] hover:bg-[#ff4b4b]/90 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[#ff4b4b]" %>
  </div>
<% end %>

<div class="mt-6">
  <div class="relative">
    <div class="absolute inset-0 flex items-center">
      <div class="w-full border-t border-gray-300"></div>
    </div>
    <div class="relative flex justify-center text-sm">
      <span class="px-2 bg-white text-gray-500">Ou</span>
    </div>
  </div>

  <div class="mt-6 grid grid-cols-1 gap-3">
    <div>
      <a href="#" class="w-full inline-flex justify-center py-2 px-4 border border-gray-300 rounded-md shadow-sm bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
        <svg class="w-5 h-5 mr-2" aria-hidden="true" fill="currentColor" viewBox="0 0 20 20">
          <path d="M6.29 18.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0020 3.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.073 4.073 0 01.8 7.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 010 16.407a11.616 11.616 0 006.29 1.84"></path>
        </svg>
        Entrar com Google
      </a>
    </div>
  </div>
</div>

<div class="mt-6 text-center">
  <p class="text-sm text-gray-600">
    Não possui uma conta? <%= link_to "Cadastre-se", "/company/register", class: "font-medium text-[#ff4b4b] hover:underline" %>
  </p>
</div>
