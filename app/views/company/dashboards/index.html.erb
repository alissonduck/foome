<% content_for :title, "Dashboard" %>

<div class="flex flex-col space-y-6">
  <div class="flex flex-col">
    <h1 class="text-2xl font-bold text-gray-800">Dashboard</h1>
    <p class="text-gray-600">Bem-vindo ao Foome, <%= current_employee.name %>!</p>
  </div>

  <% if @dashboard_data %>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <!-- Card Escritórios -->
      <div class="bg-white rounded-lg shadow p-6 border border-gray-200">
        <div class="flex items-center justify-between mb-4">
          <h2 class="font-semibold text-gray-700">Escritórios</h2>
          <div class="p-2 bg-blue-50 rounded-full">
            <svg class="w-6 h-6 text-blue-500" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
            </svg>
          </div>
        </div>
        <div class="text-3xl font-bold text-gray-800 mb-2"><%= @dashboard_data[:offices][:count] %></div>
        <p class="text-sm text-gray-600">escritórios cadastrados</p>
        
        <% if @dashboard_data[:offices][:stats] && @dashboard_data[:offices][:stats][:by_state].present? %>
          <div class="mt-4 pt-4 border-t border-gray-100">
            <h3 class="text-sm font-medium text-gray-600 mb-2">Distribuição por estado</h3>
            <div class="space-y-1">
              <% @dashboard_data[:offices][:stats][:by_state].each do |state, count| %>
                <div class="flex items-center justify-between">
                  <span class="text-sm text-gray-600"><%= state %></span>
                  <span class="text-sm font-medium text-gray-800"><%= count %></span>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Card Funcionários -->
      <div class="bg-white rounded-lg shadow p-6 border border-gray-200">
        <div class="flex items-center justify-between mb-4">
          <h2 class="font-semibold text-gray-700">Funcionários</h2>
          <div class="p-2 bg-green-50 rounded-full">
            <svg class="w-6 h-6 text-green-500" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
            </svg>
          </div>
        </div>
        <div class="text-3xl font-bold text-gray-800 mb-2"><%= @dashboard_data[:employees][:count] %></div>
        <p class="text-sm text-gray-600">funcionários cadastrados</p>

        <% if @dashboard_data[:employees][:stats].present? %>
          <div class="mt-4 pt-4 border-t border-gray-100">
            <div class="grid grid-cols-2 gap-4">
              <div>
                <h3 class="text-sm font-medium text-gray-600 mb-1">Ativos</h3>
                <p class="text-xl font-semibold text-green-600"><%= @dashboard_data[:employees][:stats][:active] %></p>
              </div>
              <div>
                <h3 class="text-sm font-medium text-gray-600 mb-1">Inativos</h3>
                <p class="text-xl font-semibold text-gray-500"><%= @dashboard_data[:employees][:stats][:inactive] %></p>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Card Benefícios -->
      <div class="bg-white rounded-lg shadow p-6 border border-gray-200">
        <div class="flex items-center justify-between mb-4">
          <h2 class="font-semibold text-gray-700">Equipes</h2>
          <div class="p-2 bg-purple-50 rounded-full">
            <svg class="w-6 h-6 text-purple-500" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
            </svg>
          </div>
        </div>
        <div class="text-3xl font-bold text-gray-800 mb-2"><%= @dashboard_data[:teams][:count] %></div>
        <p class="text-sm text-gray-600">equipes cadastradas</p>
        
        <div class="mt-6 pt-4 border-t border-gray-100">
          <%= link_to "#", class: "inline-flex items-center px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium rounded-md" do %>
            <svg class="w-4 h-4 mr-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
            </svg>
            Criar nova equipe
          <% end %>
        </div>
      </div>
    </div>

    <!-- Seção de Atividades Recentes -->
    <div class="bg-white rounded-lg shadow p-6 border border-gray-200">
      <h2 class="font-semibold text-gray-700 mb-4">Atividades Recentes</h2>
      
      <% if false # Substituir com dados reais quando disponíveis %>
        <div class="space-y-4">
          <div class="flex items-start">
            <div class="flex-shrink-0 bg-blue-100 rounded-full p-2">
              <svg class="w-4 h-4 text-blue-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
              </svg>
            </div>
            <div class="ml-3">
              <p class="text-sm font-medium text-gray-800">Novo funcionário adicionado</p>
              <p class="text-xs text-gray-500">João Silva foi adicionado ao escritório de São Paulo</p>
              <p class="text-xs text-gray-400 mt-1">há 2 horas</p>
            </div>
          </div>
        </div>
      <% else %>
        <div class="py-8 text-center">
          <svg class="mx-auto h-12 w-12 text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
          <h3 class="mt-2 text-sm font-medium text-gray-900">Sem atividades recentes</h3>
          <p class="mt-1 text-sm text-gray-500">Comece a usar o sistema para registrar atividades.</p>
        </div>
      <% end %>
    </div>

    <!-- Seção de Ações Rápidas -->
    <div class="bg-white rounded-lg shadow p-6 border border-gray-200">
      <h2 class="font-semibold text-gray-700 mb-4">Ações Rápidas</h2>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <%= link_to "#", class: "flex items-center p-4 border border-gray-200 rounded-lg hover:bg-gray-50" do %>
          <div class="p-2 bg-blue-50 rounded-full mr-4">
            <svg class="w-6 h-6 text-blue-500" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z" />
            </svg>
          </div>
          <div>
            <h3 class="font-medium text-gray-800">Adicionar Funcionário</h3>
            <p class="text-sm text-gray-600">Registrar novo membro na equipe</p>
          </div>
        <% end %>
        
        <%= link_to "#", class: "flex items-center p-4 border border-gray-200 rounded-lg hover:bg-gray-50" do %>
          <div class="p-2 bg-green-50 rounded-full mr-4">
            <svg class="w-6 h-6 text-green-500" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
            </svg>
          </div>
          <div>
            <h3 class="font-medium text-gray-800">Gerenciar Benefícios</h3>
            <p class="text-sm text-gray-600">Configurar benefícios disponíveis</p>
          </div>
        <% end %>
        
        <%= link_to "#", class: "flex items-center p-4 border border-gray-200 rounded-lg hover:bg-gray-50" do %>
          <div class="p-2 bg-purple-50 rounded-full mr-4">
            <svg class="w-6 h-6 text-purple-500" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
          </div>
          <div>
            <h3 class="font-medium text-gray-800">Agendar Eventos</h3>
            <p class="text-sm text-gray-600">Criar eventos e reuniões</p>
          </div>
        <% end %>
      </div>
    </div>
  <% else %>
    <div class="bg-white rounded-lg shadow p-6 border border-gray-200">
      <div class="text-center py-8">
        <svg class="mx-auto h-12 w-12 text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900">Erro ao carregar dados</h3>
        <p class="mt-1 text-sm text-gray-500">Não foi possível carregar os dados do dashboard. Tente novamente mais tarde.</p>
      </div>
    </div>
  <% end %>
</div>
