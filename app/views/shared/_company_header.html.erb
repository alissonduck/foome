      <!-- Menu do usuário -->
      <div class="flex items-center space-x-4">
        <% if current_employee.present? %>
          <div class="relative" data-controller="dropdown">
            <button type="button" class="flex items-center text-foome-dark hover:text-foome-primary" data-action="dropdown#toggle">
              <div class="w-8 h-8 bg-[#ff4b4b] rounded-full flex items-center justify-center">
                <span class="text-sm font-medium text-white"><%= current_employee.name.split.first[0] %></span>
              </div>
            </button>
            <div class="absolute right-0 mt-2 w-56 bg-white rounded-md shadow-lg py-1 z-10 hidden" data-dropdown-target="menu">
              <div class="px-4 py-3">
                <p class="text-sm font-medium text-foome-dark"><%= current_employee.name %></p>
                <p class="text-xs text-foome-gray truncate"><%= current_employee.email %></p>
              </div>
              <%= link_to "#", class: "flex items-center px-4 py-2 text-sm text-foome-dark hover:bg-foome-gray-light" do %>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
