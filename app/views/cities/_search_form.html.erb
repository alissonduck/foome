<div class="mb-6 bg-white p-4 rounded-lg shadow-sm">
  <%= form_with url: search_cities_path, method: :get, class: "flex" do |f| %>
    <div class="flex-grow mr-2">
      <%= f.text_field :query, 
                        value: params[:query], 
                        placeholder: "Digite o nome da cidade...", 
                        class: "w-full rounded-md border-gray-300 shadow-sm focus:border-foome-primary focus:ring focus:ring-foome-primary focus:ring-opacity-20" %>
    </div>
    
    <%= f.submit "Pesquisar", class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-[#ff4b4b] hover:bg-[#ff4b4b]/90" %>
  <% end %>
</div> 