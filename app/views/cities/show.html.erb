<div class="max-w-7xl mx-auto px-4">
  <div class="flex items-center mb-6">
    <%= link_to cities_path, class: "text-foome-gray hover:text-foome-primary flex items-center" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
      </svg>
      Voltar para Cidades
    <% end %>
  </div>

  <div class="mb-8">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-2xl font-bold text-foome-dark mb-2"><%= @city.name %></h1>
        <p class="text-foome-gray-dark">
          <span class="inline-flex items-center">
            <span class="mr-2">Estado:</span>
            <%= link_to state_path(@city.state), class: "hover:text-foome-primary flex items-center bg-gray-100 text-gray-800 px-2 py-1 rounded-md font-medium text-sm" do %>
              <%= @city.state.name %> (<%= @city.state.abbreviation %>)
            <% end %>
          </span>
        </p>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-8">
    <div class="bg-white shadow-sm rounded-lg overflow-hidden p-6">
      <h2 class="text-lg font-medium text-foome-dark mb-4">Informações da Cidade</h2>
      
      <dl class="divide-y divide-gray-200">
        <div class="py-3 flex justify-between">
          <dt class="text-sm font-medium text-foome-gray">Nome</dt>
          <dd class="text-sm text-foome-dark"><%= @city.name %></dd>
        </div>
        
        <div class="py-3 flex justify-between">
          <dt class="text-sm font-medium text-foome-gray">Estado</dt>
          <dd class="text-sm text-foome-dark">
            <%= link_to @city.state.name, state_path(@city.state), class: "hover:text-foome-primary" %>
          </dd>
        </div>
        
        <div class="py-3 flex justify-between">
          <dt class="text-sm font-medium text-foome-gray">UF</dt>
          <dd class="text-sm text-foome-dark"><%= @city.state.abbreviation %></dd>
        </div>
        
        <div class="py-3 flex justify-between">
          <dt class="text-sm font-medium text-foome-gray">ID</dt>
          <dd class="text-sm text-foome-dark"><%= @city.id %></dd>
        </div>
      </dl>
    </div>
    
    <div class="bg-white shadow-sm rounded-lg overflow-hidden">
      <div class="p-4 border-b border-gray-200 bg-gray-50">
        <h2 class="text-lg font-medium text-foome-dark">Ações</h2>
      </div>
      
      <div class="p-6 space-y-4">
        <%= link_to state_path(@city.state), class: "w-full flex items-center justify-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-foome-dark bg-white hover:bg-gray-50" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-foome-gray" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
          </svg>
          Ver Estado: <%= @city.state.name %>
        <% end %>
        
        <%= link_to state_cities_path(@city.state), class: "w-full flex items-center justify-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-foome-dark bg-white hover:bg-gray-50" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-foome-gray" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7" />
          </svg>
          Ver Outras Cidades do <%= @city.state.abbreviation %>
        <% end %>
      </div>
    </div>
  </div>
</div>
